{
  "name": "@juliusagency/base-user-mongo",
  "version": "1.0.0",
  "description": "A npm package for use in Node.js projects.",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "../../node_modules/.bin/rimraf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && move-file lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "rename": "./node_modules/move-file-cli/cli.js README.md gitREADME.md",
    "rename:back": "./node_modules/move-file-cli/cli.js gitREADME.md README.md",
    "prepack": "npm run build",
    "pack:local": "npm run rename&& npm run build && npm pack && npm run rename:back",
    "prepare": "husky install",
    "semantic-release": "semantic-release --branches main",
    "commit": "git-cz"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuliusAgency/base-user-mongo.git"
  },
  "author": "ekarpovs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JuliusAgency/base-user-mongo/issues"
  },
  "homepage": "https://github.com/JuliusAgency/base-user-mongo#readme",
  "keywords": [
    "npm",
    "javascript",
    "typescript",
    "esm",
    "cjs",
    "nodejs",
    "commonjs",
    "ecmascript"
  ],
  "dependencies": {
    "mongoose": "^8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}