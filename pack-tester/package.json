{
    "name": "pack-tester",
    "version": "1.0.0",
    "description": "JLA Packages tester for nodejs app",
    "main": "./build/main/index.js",
    "repository": "https://github.com/juliusAgency/jla-node-monorepo",
    "license": "MIT",
    "keywords": [
        "nodejs",
        "typescript",
        "pack-tester"
    ],
    "scripts": {
        "clean": "../node_modules/.bin/rimraf ./coverage ./build",
        "build": "run-s clean && npx tsc",
        "dev": "NODE_ENV=dev nodemon ./src/index.ts",
        "start": "NODE_ENV=prod ts-node ./src/index.ts",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "jest --detectOpenHandles --coverage --verbose",
        "run": "npm run build && export NODE_ENV=prod && node ./build/main/index.js"
    },
    "engines": {
        "node": ">=16"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.20",
        "@types/node": "^20.11.19",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2"
    },
    "prettier": {
        "singleQuote": true
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "pg": "^8.11.3"
    }
}
