{
  "name": "jla-node-monorepo",
  "version": "1.0.0",
  "description": "Development and test environment of the package for nodejs apps",
  "main": "./build/main/src/index.js",
  "repository": "https://github.com/juliusAgency/node-monorepo",
  "keywords": [
    "nodejs",
    "typescript",
    "starter"
  ],
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "install": "npm install --ignore-scripts",
    "prepare": "husky install",
    "clean": "npm run clean:pack-tester && npm run clean:packages",
    "clean:packages": "npm run clean --workspaces",
    "clean:pack-tester": "./node_modules/.bin/rimraf ./coverage ./build",
    "lint": "npm run lint:pack-tester && npm run lint:packages",
    "lint:pack-tester": "npm run lint:spell && npm run lint:lint",
    "lint:packages": "npm run lint --workspaces",
    "lint:spell": "cspell \"{README.md,.github/*.md,packs-tester/**/*.ts}\"",
    "lint:lint": "eslint pack-tester --quiet --ext .ts",
    "lint:prettier": "prettier --check \"pack-tester/**/*.ts\"",
    "fix": "npm run fix:pack-tester && npm run fix:packages",
    "fix:pack-tester": "npm run fix:prettier && npm run fix:lint",
    "fix:packages": "npm run lint:fix --workspaces",
    "fix:prettier": "prettier \"pack-tester/**/*.ts\" --write",
    "fix:lint": "eslint pack-tester --quiet --ext .ts --fix",
    "build": "npm run build:packages",
    "build:packages": "npm run build --workspaces",
    "prepack": "npm run prepack:packages",
    "prepack:packages": "npm run prepack --workspaces",
    "pack:local": "npm run pack:local:packages",
    "pack:local:packages": "npm run pack:local --workspaces",
    "test": "npm run test:packages",
    "test:packages": "npm run test --workspaces",
    "dev": "NODE_ENV=dev nodemon ./pack-tester/src/index.ts"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "cspell": "^8.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "move-file-cli": "^3.0.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "semantic-release": "^23.0.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "passport-github2": "^0.1.12",
    "passport-local": "^1.0.0",
    "pg": "^8.11.4",
    "pg-hstore": "^2.3.4",
    "typeorm": "^0.3.20"
  }
}
