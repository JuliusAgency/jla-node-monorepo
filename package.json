{
  "name": "jla-node-monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "./packages/private/*",
    "./packages/public/*",
    "./pack-tester/core/"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "install": "npm install --ignore-scripts",
    "clean": "npm run clean:all",
    "clean:all": "npm run clean --workspaces",
    "build": "npm run build:all",
    "build:all": "npm run build --workspaces",
    "build:esm": "npm run build:esm:packages",
    "build:esm:packages": "npm run build:esm --workspaces",
    "build:jsc": "npm run build:jsc:packages",
    "build:jsc:packages": "npm run build:jsc --workspaces",
    "test": "npm run test:all",
    "test:all": "npm run test --workspaces",
    "lint": "npm run lint:all",
    "lint:all": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix:all",
    "lint:fix:all": "npm run lint:fix --workspaces",
    "prepack": "npm run prepack:packages",
    "prepack:packages": "npm run prepack --workspaces",
    "pack:local": "npm run pack:local:packages",
    "pack:local:packages": "npm run pack:local --workspaces",
    "dev": "npm run dev -w pack-tester/core",
    "start": "npm run start -w pack-tester/core",
    "run": "npm run run -w pack-tester/core",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "husky": "^8.0.0",
    "jest": "^29.6.3",
    "move-file-cli": "^3.0.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
